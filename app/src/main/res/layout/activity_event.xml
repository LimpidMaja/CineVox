<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:textAlignment="center"
    tools:context=".EventActivity">

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff3a3251"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:text="Event Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/titleBar"
        android:layout_above="@+id/movies_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:text="Title"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:background="#ff877ac3"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="40dp"
                android:background="#ffd9b8f1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:hint="Oscar Party"
                android:gravity="left|center"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ff877ac3"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:hint="Movie night party for oscars..."
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_marginTop="10dp"
                android:text="Date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="#ff877ac3"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginRight="2dp"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="#ff877ac3"
                android:textColor="#ffffff"
                android:layout_marginLeft="2dp"
                android:textSize="18sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="#ffd9b8f1"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_marginRight="2dp"
                android:hint="17.10.2014"
                android:gravity="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="#ffd9b8f1"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:hint="19:30"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:text="Place"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:background="#ff877ac3"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="40dp"
                android:background="#ffd9b8f1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:hint="MMs Place"
                android:gravity="left|center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:text="Friends"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:background="#ff877ac3"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="40dp"
                android:background="#ffd9b8f1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:hint="Iris, Mitja, Tadej (slike)"
                android:gravity="left|center"/>

            <Button
                android:layout_width="40dp"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:onClick="handleSelectFriends"
                android:background="#343253"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:text="Voting"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:background="#ff877ac3"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:background="#ffd9b8f1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:hint="By Rating"
                android:gravity="left|center"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/movies_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Movies"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ff877ac3"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"/>

        <it.sephiroth.android.library.widget.HListView
            android:id="@+id/listMoviesBar"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="60dp"
            android:background="#ffffff" />
    </LinearLayout>

</RelativeLayout>

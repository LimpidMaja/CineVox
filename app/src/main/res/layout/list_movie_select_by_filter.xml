<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:clickable="true"
    android:paddingTop="2dp">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:text="How many movies for voting?"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="40dp"
            android:background="#ff877ac3"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:hint="15"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2">

        <TextView
            android:text="Choose only popular movies?"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="40dp"
            android:background="#ff877ac3"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"/>

        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Year Range"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ff877ac3"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginRight="2dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginRight="2dp"
            android:hint="1920"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginLeft="2dp"
            android:hint="2014"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Runtime Range"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ff877ac3"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginRight="2dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginRight="2dp"
            android:hint="50"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginLeft="2dp"
            android:hint="160"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Rating Range"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ff877ac3"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginRight="2dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginRight="2dp"
            android:hint="0"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginLeft="2dp"
            android:hint="10"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:text="Genres"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="40dp"
            android:background="#ff877ac3"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="40dp"
            android:background="#ffd9b8f1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:hint="All"
            android:gravity="left|center"/>

        <Button
            android:layout_width="40dp"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:onClick="handleSelectFriends"
            android:background="#343253"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Add Movies"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_height="match_parent"
        android:onClick="handleSelectFriends"
        android:background="#343253"/>
</LinearLayout>